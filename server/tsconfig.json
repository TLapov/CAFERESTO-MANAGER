{
    "compilerOptions": {
      "rootDir": "./",
      "target": "es2016",                              
      "module": "commonjs",                                
      "outDir": "./build",                                 
      "forceConsistentCasingInFileNames": true,           
      "strict": true,                                      
      "skipLibCheck": true,
      "esModuleInterop": true,
      "strictPropertyInitialization": false,
      "useDefineForClassFields": false,                               
    },
    "exclude": ["node_modules/"]
  }
  